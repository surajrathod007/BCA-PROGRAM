<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color_new"
        tools:context=".ui.fragments.MaterialsFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:background="@color/action_bar"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/main_bold"
                    android:text="Study Materials"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/design_default_color_on_primary"/>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_bold"
            android:text="Books"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/text_color_bold"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="6dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_width="120dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/main_bold"
                        android:textSize="22sp"
                        android:layout_centerInParent="true"
                        android:text="Sem 1"
                        android:textColor="#BD02CC6A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:foreground="#A302CC6A"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="6dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginRight="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/main_bold"
                        android:textSize="22sp"
                        android:layout_centerInParent="true"
                        android:text="Sem 2"
                        android:textColor="#BD4485FD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:foreground="#A34485FD"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="6dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_width="120dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/main_bold"
                        android:textSize="22sp"
                        android:layout_centerInParent="true"
                        android:text="Sem 3"
                        android:textColor="#BDFE7853"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:foreground="#A3FE7853"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="6dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_width="120dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/main_bold"
                        android:text="Sem 4"
                        android:textColor="#BD02CC6A"
                        android:textSize="22sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:foreground="#A302CC6A"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="6dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginRight="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/main_bold"
                        android:textSize="22sp"
                        android:layout_centerInParent="true"
                        android:text="Sem 5"
                        android:textColor="#BD4485FD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:foreground="#A34485FD"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="6dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_width="120dp"
                android:layout_height="140dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/main_bold"
                        android:textSize="22sp"
                        android:layout_centerInParent="true"
                        android:text="Sem 6"
                        android:textColor="#BDFE7853"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:foreground="#A3FE7853"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</layout>