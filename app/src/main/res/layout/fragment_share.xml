<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/back_color_new"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ShareFragment">




    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@color/back_color_new"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/action_bar"
            app:title="Share Our App"
            app:titleTextColor="@color/white"
            android:elevation="10dp"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <TextView
            android:fontFamily="@font/main_heavy"
            android:textColor="@color/text_color_bold"
            android:layout_margin="10dp"
            android:text="Share Our App With Your Friends!"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:fontFamily="@font/main_bold"
            android:layout_margin="12dp"
            android:id="@+id/btnShare"
            android:text="Click Here To Share"
            android:textColor="@color/white"
            android:background="@drawable/button_background_gradient"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/main_bold"
            android:textColor="@color/text_color_bold"
            android:text="Change Log :"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ScrollView
            android:backgroundTint="@color/back_color_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    android:id="@+id/updateCardView"
                    android:backgroundTint="@color/white"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textColor="@color/text_color_bold"
                        android:fontFamily="@font/main_bold"
                        android:layout_margin="5dp"
                        android:text="Update Message"
                        android:id="@+id/txtMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textColor="@color/text_color_bold"
                        android:fontFamily="@font/main_bold"
                        android:layout_margin="5dp"
                        android:text="Update Message"
                        android:id="@+id/txtNotice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:textColor="@color/text_color_bold"
                    android:fontFamily="@font/main_regular"
                    android:gravity="center"
                    android:text="app version"
                    android:id="@+id/txtVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>







    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>